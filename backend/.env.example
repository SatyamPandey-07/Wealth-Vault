# Server Configuration
PORT=5001
NODE_ENV=development

# JWT Configuration - Generate strong secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-here-CHANGE-THIS-IN-PRODUCTION
JWT_EXPIRE=30d

# Superbase Connection
DATABASE_URL=postgres://postgres.xxxx:password@aws-0-region.pooler.supabase.com:6543/postgres
DIRECT_URL=postgres://postgres.xxxx:password@aws-0-region.supabase.com:5432/postgres

# Database Connection Pool Configuration (Optional - uses defaults if not set)
# Maximum number of connections in the pool (default: 20)
DB_POOL_MAX=20
# Minimum number of connections to maintain (default: 2)
DB_POOL_MIN=2
# Idle connection timeout in seconds (default: 30)
DB_IDLE_TIMEOUT=30
# Connection timeout in seconds (default: 10)
DB_CONNECT_TIMEOUT=10
# Maximum connection lifetime in seconds (default: 3600 = 1 hour)
DB_MAX_LIFETIME=3600

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Redis Configuration (Optional - falls back to memory if not provided)
REDIS_URL=redis://localhost:6379

# Optional: For production
# SENDGRID_API_KEY=your-sendgrid-api-key

# Gemini key for chatbot
GEMINI_API_KEY=YOUR GEMINI_API_KEY_HERE

# Service Certificate Encryption
# CRITICAL: Required for encrypting service private keys
# Generate a secure 32-byte key: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# NEVER commit this key to version control or share it
# Store securely in production (AWS Secrets Manager, Azure Key Vault, etc.)
SERVICE_KEY_ENCRYPTION_KEY=generate-your-64-character-hex-key-here
